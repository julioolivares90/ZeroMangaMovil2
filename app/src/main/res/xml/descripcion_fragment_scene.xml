<?xml version="1.0" encoding="utf-8"?>
<MotionScene 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@id/start"
        motion:duration="1000">
        <OnSwipe
            motion:dragDirection="dragUp"
            motion:dragScale="1"
            motion:moveWhenScrollAtTop="true"
            motion:onTouchUp="stop"
            motion:touchAnchorId="@id/rv_capitulos"
            motion:touchAnchorSide="top"
            >

        </OnSwipe>
       <KeyFrameSet>
       </KeyFrameSet>
    </Transition>

    <ConstraintSet android:id="@+id/start">
        <Constraint
            android:layout_height="300dp"
            android:layout_width="wrap_content"
            motion:layout_constraintStart_toStartOf="parent"
            android:id="@+id/iv_detalle_manga"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintEnd_toEndOf="@id/toolbarDescripcion"
            motion:layout_constraintHorizontal_bias="0.0" />
        <Constraint
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/toolbarDescripcion"
            motion:layout_constraintTop_toTopOf="@+id/iv_detalle_manga"
            motion:layout_constraintEnd_toStartOf="@+id/iv_detalle_manga"
            motion:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="300dp" />
        <Constraint
            android:layout_height="673dp"
            motion:layout_editor_absoluteX="1dp"
            android:layout_width="409dp"
            motion:layout_constraintTop_toBottomOf="@+id/toolbarDescripcion"
            android:id="@+id/ll_buttons" />
        <Constraint
            android:id="@+id/ll_buttons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_editor_absoluteY="57dp"
            motion:layout_editor_absoluteX="1dp" />
        <Constraint
            android:layout_height="wrap_content"
            motion:layout_editor_absoluteX="1dp"
            android:layout_width="match_parent"
            motion:layout_constraintTop_toBottomOf="@+id/toolbarDescripcion"
            android:id="@+id/rv_capitulos"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_editor_absoluteY="356dp" />
        <Constraint
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            motion:layout_editor_absoluteY="356dp"
            motion:layout_editor_absoluteX="1dp"
            android:id="@+id/rv_capitulos"
            motion:layout_constraintTop_toBottomOf="@+id/toolbarDescripcion" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:id="@+id/iv_detalle_manga"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent" />
        <Constraint
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/toolbarDescripcion"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintHorizontal_bias="0.0"
            motion:layout_constraintTop_toTopOf="@+id/iv_detalle_manga" />
        <Constraint
            android:layout_width="409dp"
            android:layout_height="673dp"
            android:id="@+id/ll_buttons"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintBottom_toBottomOf="parent" />
    </ConstraintSet>
</MotionScene>